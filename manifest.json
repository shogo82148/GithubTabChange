{
  "manifest_version": 2,
  "name": "Github Tab Change",
  "version": "1.0",
  "description": "change tab-size in github",
  "permissions" : [ "tabs" ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["tabchange.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon" : "icon-19.png",
    "default_title" : "There's a 'G' in this URL!",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
      "tab-size-2.css",
      "tab-size-4.css",
      "tab-size-8.css"
  ]
}
